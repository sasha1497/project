{
  "monorepo": true,
  "root": "apps",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.build.json"
      }
    },
    "main": {
      "type": "library",
      "root": "libs/main",
      "entryFile": "index",
      "sourceRoot": "libs/main/src",
      "compilerOptions": {
        "tsConfigPath": "libs/main/tsconfig.lib.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.build.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}